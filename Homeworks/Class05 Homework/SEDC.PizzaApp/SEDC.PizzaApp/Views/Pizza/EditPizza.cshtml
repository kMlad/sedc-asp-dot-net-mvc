@model PizzaViewModel

<h2>Edit a pizza</h2>

<form asp-action="EditPizzaPost" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <select asp-for="Name" asp-items="Html.GetEnumSelectList<PizzaType>()" class="form-control">
            <option value="">Select a pizza...</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Size">Size:</label>
        <select asp-for="Size" asp-items="Html.GetEnumSelectList<PizzaSize>()" class="form-control">
            <option value="">Select size...</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IsOnSale"></label>
        <input type="checkbox" asp-for="IsOnSale" id="check-box" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn-default btn">Confirm and Submit</button>

</form>